<Window x:Class="Search_for_RiPD.UserPageWindow"
        xmlns:materialDesign = "http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local = "clr-namespace:Search_for_RiPD"
        mc:Ignorable = "d"
        Title = "Search for RiPD" Height = "600" Width = "1000" WindowStartupLocation="CenterScreen" MinHeight="600" MinWidth="550">
    <Grid Background = "#ffdadada" >
        <Border MinWidth = "500" Margin = "15" Background = "White" VerticalAlignment = "Center" Padding = "30" MaxWidth = "1550" CornerRadius = "20" >
            <Border.Effect >
                <DropShadowEffect BlurRadius = "30" Color = "LightGray" ShadowDepth = "0" />
            </Border.Effect >
            <StackPanel >
                <TextBlock Text = "ФУНКЦІОНАЛ" FontSize = "30" FontWeight = "Bold" Margin = "0 0 0 20" />
                <TextBlock x:Name="User_Acc_View" FontSize = "15" FontWeight="Bold" Margin="0 0 0 20"/>
                <Button x:Name="Button_LoadFile" Content="Выберите файлы..." Click="Button_LoadFile_Click"/>
                <ListBox x:Name="lstFiles" Margin="0,20,0,0"/>
            </StackPanel >
        </Border >
    </Grid >
</Window >
